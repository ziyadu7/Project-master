<%- include('../layouts/commonHeader.ejs') %>
<div class="container ">
    <div class="row justify-content-center">
        <div class="col-lg-12 row d-flex justify-content-center ">
            <div class="shopping_cart_table col-auto ">
                <div>
                        <div class="d-flex me-5" style="justify-content: space-between;">
                          <h4 class="my-5"><span class="text-white"> Select Your Address</span></h4>
                        </div>
                    <tbody>
                        <% if (user==undefined) { %>
                            <% } else { %>
                                <% for (let i=0; i <user.address.length; i++) { %>
                                    <div class="col-lg-">
                                        <div class="checkout__order text-center">
                                            <div class="checkout__order__product ">
                                                <ul>
                                                    <li>
                                                        <span class="top__text text-start">
                                                            address: <%=user.address[i].address%>,<br>
                                                            City:<%=user.address[i].city%>,<br>
                                                            District:<%=user.address[i].district%>,<br>
                                                            State:<%=user.address[i].state%>,<br>
                                                            Country:<%=user.address[i].country%>,
                                                        </span>
                                                    </li>
                                                </ul>
                                            </div>
                                            <br><a href="/editProfile?index=<%= i %>"
                                                    class="site-btn1">Select</a>
                                        </div>
                                    </div>
                                    <% } %>
                                        <% } %>
                                            <div class="row text-center mt-4 mb-4">
                                                <div class="">
                                                    <a href="/addAddress" class="site-btn2 ">Add New Address</a>
                                                </div>
                                            </div>
                    </tbody>
                </div>
            </div>
        </div>   
    </div>
</div>

<%- include('../layouts/pagesFooter.ejs') %>